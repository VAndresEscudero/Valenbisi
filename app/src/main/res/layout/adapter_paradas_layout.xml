<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="40" android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="50"
        android:layout_height="match_parent"
        android:id="@+id/paradaviewnumber"
        android:textColor="@android:color/holo_green_dark"
        android:hint="PARADA ID"
        android:textAlignment="viewStart"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:id="@+id/paradaviewpartes"
            android:textColor="@android:color/holo_red_light"
            android:hint="PARADA PARTES"
            android:textAlignment="viewEnd"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:id="@+id/paradaviewaddress"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:hint="PARADA ADDRESS"/>


</LinearLayout>